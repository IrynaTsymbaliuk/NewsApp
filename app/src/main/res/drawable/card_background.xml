<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_longAnimTime">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/colorPrimaryLight" />
           </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/colorBackground" />
           </shape>
    </item>
    <item android:state_checked="true">
        <color android:color="@color/colorPrimaryLight" />
    </item>
</selector>